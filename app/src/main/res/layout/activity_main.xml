<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pwr.janek.powerflow1.MainActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="320dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/bus"
            tools:ignore="ContentDescription"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <Button
                android:id="@+id/button_bus_slack"
                android:layout_width="107dp"
                android:layout_height="51dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintBottom_toTopOf="@+id/button_bus_pq2"
                app:layout_constraintEnd_toStartOf="@+id/button_bus_pq1"
                app:layout_constraintHorizontal_bias="0.297"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                android:background="@android:color/transparent"/>

            <Button
                android:id="@+id/button_bus_pq1"
                android:layout_width="108dp"
                android:layout_height="46dp"
                android:layout_marginEnd="60dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@android:color/transparent"/>

            <Button
                android:id="@+id/button_bus_pq2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="52dp"
                android:layout_marginStart="44dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@android:color/transparent"/>

            <Button
                android:id="@+id/button_bus_pv"
                android:layout_width="87dp"
                android:layout_height="46dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.651"
                app:layout_constraintStart_toEndOf="@+id/button_bus_pq2"
                app:layout_constraintTop_toBottomOf="@+id/button_bus_pq1"
                app:layout_constraintVertical_bias="0.765"
                android:background="@android:color/transparent"/>

            <Button
                android:id="@+id/button_line13"
                android:layout_width="30dp"
                android:layout_height="91dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toTopOf="@+id/button_bus_pq2"
                app:layout_constraintEnd_toEndOf="@+id/button_bus_slack"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="@+id/button_bus_slack"
                app:layout_constraintTop_toBottomOf="@+id/button_bus_slack"
                app:layout_constraintVertical_bias="0.565"
                android:background="@android:color/transparent"/>

            <Button
                android:id="@+id/button_line24"
                android:layout_width="28dp"
                android:layout_height="85dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toTopOf="@+id/button_bus_pv"
                app:layout_constraintEnd_toEndOf="@+id/button_bus_pq1"
                app:layout_constraintHorizontal_bias="0.375"
                app:layout_constraintStart_toStartOf="@+id/button_bus_pq1"
                app:layout_constraintTop_toBottomOf="@+id/button_bus_pq1"
                app:layout_constraintVertical_bias="0.649"
                android:background="@android:color/transparent"/>

            <Button
                android:id="@+id/button_line12"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/button_bus_pq1"
                app:layout_constraintHorizontal_bias="0.703"
                app:layout_constraintStart_toEndOf="@+id/button_bus_slack"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.251"
                android:background="@android:color/transparent"/>

            <Button
                android:id="@+id/button_line34"
                android:layout_width="86dp"
                android:layout_height="29dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/button_bus_pv"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toEndOf="@+id/button_bus_pq2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.705"
                android:background="@android:color/transparent"/>

        </android.support.constraint.ConstraintLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_calculate_default"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:text="Calc Def" />

        <Button
            android:id="@+id/button_calculate"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:text="Calculate" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listView_layout">
        </ListView>

    </LinearLayout>


</LinearLayout>
